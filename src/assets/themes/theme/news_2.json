  "images":[
    {
      "url":"assets/img/news_2.png",
      "rasio":1,
      "style":{
        "backgroundSize":"cover",
        "position":"absolute",
        "left":"0px",
        "top":"0px",
        "width":"500px",
        "height":"500px",
        "zIndex":1
      }
    }  
  ]
